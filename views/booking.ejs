<div class="container">
  <ul class="nav nav-tabs tab">
    <li class="nav-item">
      <a class="nav-link active" data-toggle="tab" href="#book-flight" id="flight-tab">Book a Flight</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#check-in" id="checkIn-tab">Check In</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#flight-status" id="flightStatus-tab">Flight Status</a>
    </li>
    <li class="nav-item">
      <a class="nav-link" data-toggle="tab" href="#my-bookings" id="myBookings-tab">My Bookings</a>
    </li>
  </ul>

  <div class="tab-content">
    <div id="book-flight" class="tab-pane fade show active">
      <div class="booking-form">
        <!-- Content for booking a flight tab -->
        <form action="/booking" method="POST" id="bookingForm">
          <div class="form-row">
            <div class="form-group">
              <label for="firstName">First Name</label>
              <input type="text" class="form-control" id="firstName" name="firstName" required>
            </div>
            <div class="form-group">
              <label for="lastName">Last Name</label>
              <input type="text" class="form-control" id="lastName" name="lastName" required>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="departureCity">Departure City</label>
              <input type="text" class="form-control" id="departureCity" name="departureCity">
            </div>
            <div class="form-group">
              <label for="arrivalCity">Arrival City</label>
              <input type="text" class="form-control" id="arrivalCity" name="arrivalCity">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="departureDate">Departure Date</label>
              <input type="date" class="form-control" id="departureDate" name="departureDate">
            </div>
            <div class="form-group">
              <label for="returnDate">Return Date (if applicable)</label>
              <input type="date" class="form-control" id="ReturnDate" name="returnDate">
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="passengers">Passengers</label>
              <input type="number" class="form-control" id="passengers" name="passengers">
            </div>
            <div class="form-group">
              <label for="class">Class</label>
              <select id="class" class="form-control" name="class">
                <option selected>Economy</option>
                <option>Business</option>
                <option>First</option>
              </select>
            </div>
          </div>
          <div class="form-row">
            <div class="form-group">
              <label for="tripType">Trip Type</label>
              <select id="tripType" class="form-control" name="tripType">
                <option selected>Round Trip</option>
                <option>One Way</option>
              </select>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-type">Book Now</button>
        </form>
      </div>
    </div>
    <div id="check-in" class="tab-pane fade">
      <div class="booking-form">
        <!-- Content for check-in tab -->
        <form>
          <div class="form-row">
            <div class="form-group">
              <label for="bookingReference">Booking Reference</label>
              <input type="text" class="form-control" id="bookingReference" name="bookingReference">
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-type">Check In</button>
        </form>
      </div>
    </div>
    <div id="flight-status" class="tab-pane fade">
      <div class="booking-form">
        <!-- Content for flight status tab -->
        <form>
          <div class="form-row">
            <div class="form-group">
              <label for="bookingReference">Booking Reference</label>
              <input type="text" class="form-control" id="bookingReference" name="bookingReference">
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-type">Check Status</button>
        </form>
      </div>
    </div>
    <div id="my-bookings" class="tab-pane fade">
      <div class="booking-form">
        <!-- Content for my bookings tab -->
        <form>
          <div class="form-row">
            <div class="form-group">
              <label for="userName">Username</label>
              <input type="text" class="form-control" id="userName">
            </div>
            <div class="form-group">
              <label for="password">Password</label>
              <input type="password" class="form-control" id="password">
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-type">Log In</button>
        </form>
      </div>
    </div>
  </div>
</div>
