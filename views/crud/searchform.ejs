<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Fly Orizon Airline</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
     <!--CSS-->
   <link rel="stylesheet" href="/css/style.css">
   <link rel="stylesheet" href="/css/account.css">
   <link rel="stylesheet" href="/css/form.css">
   <!--Fontawesome-->
   <script src="https://kit.fontawesome.com/1fe08c0760.js" crossorigin="anonymous"></script>

    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="main-breadcrumb mx-5">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
          <li class="breadcrumb-item active" aria-current="page"><a href="/searchform">Search Booked</a></li>  
        </ol>
      </nav>
      <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 mx-5">
                <form action="/search" method="GET" class="text-center">
                    <div class="form-row">
                        <div class="form-group col mx-1">
                            <label for="firstName">First Name</label>
                            <input type="text" class="form-control" id="firstName" name="firstName">
                        </div>
                        <div class="form-group col mx-1">
                            <label for="lastName">Last Name</label>
                            <input type="text" class="form-control" id="lastName" name="lastName">
                        </div>
                        <div class="form-group col mx-1">
                            <label for="bookingId">Booking ID</label>
                            <input type="text" class="form-control" id="bookingId" name="booking_id">
                        </div>
                    </div>
                    <button type="submit" class="btn btn-success">Search</button>
                    <a href="/profile"><button type="button" class="btn btn-secondary mr-2">Cancel</button></a>

                </form>
            </div>
        </div>
    </div>
    
    <script>
        function validateBookingId() {
            const bookingIdInput = document.getElementById("bookingId");
            const bookingId = bookingIdInput.value.trim();
            if (!/^\d+$/.test(bookingId)) {
                alert("Booking ID must contain only numeric characters");
                return false;
            }
            return true;
        }
    
        // Function to validate the form before submission
        function validateForm() {
            return validateBookingId(); 
        }
    </script>
    
    
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
